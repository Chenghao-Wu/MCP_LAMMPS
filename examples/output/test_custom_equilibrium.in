# LAMMPS Equilibrium MD Script
# Generated by MCP LAMMPS - Best Practice Protocol
#
# Simulation Configuration:
#   Temperature: 350.0 K
#   Pressure: 10.0 atm
#   Timestep: 2.0 fs
#   System Type: generic
#
# Protocol Stages:
#   1. Energy Minimization: 5000 steps
#   2. NVT Heating: 20000 steps
#   3. NPT Density Equilibration: 50000 steps
#   4. NPT Production: 500000 steps
#
# Total simulation time: 1000.0 ps


# ============================================================================
# INITIALIZATION
# ============================================================================

units           real
atom_style      full
boundary        p p p

# Read structure
read_data       /home/zhenghaowu/mcp_lammps/examples/output/test_system.lmp


# ============================================================================
# FORCE FIELD
# ============================================================================
# Note: Force field parameters are read from the data file
# The data file should contain all pair_coeff, bond_coeff, angle_coeff, etc.

# Force field styles should be defined here


# ============================================================================
# SIMULATION SETTINGS
# ============================================================================

# Neighbor list settings
neighbor        2.0 bin
neigh_modify    every 1 delay 0 check yes

# Thermodynamic output
thermo          500
thermo_style    custom step temp press pe ke etotal vol density
thermo_modify   flush yes


# ============================================================================
# STAGE 1: ENERGY MINIMIZATION
# ============================================================================
# Purpose: Remove bad contacts and overlaps from initial structure
# Method: CG minimization
# Convergence: Energy < 0.0001, Force < 1e-06

print "=========================================="
print "Starting Stage 1: Energy Minimization"
print "=========================================="

minimize        0.0001 1e-06 5000 10000

# Save minimized structure
write_data      test_custom_minimized.data
write_restart   test_custom_minimized.restart

print "Minimization complete"
print ""

# Reset timestep counter
reset_timestep  0


# ============================================================================
# STAGE 2: NVT HEATING
# ============================================================================
# Purpose: Gradually heat system from 150.0 K to 350.0 K
# Ensemble: NVT (constant volume)
# Timestep: 0.5 fs (shorter for stability)
# Duration: 20000 steps (10.0 ps)

print "=========================================="
print "Starting Stage 2: NVT Heating"
print "=========================================="

# Set shorter timestep for heating
timestep        0.5

# Initialize velocities at starting temperature
velocity        all create 150.0 12345 dist gaussian

# NVT ensemble with gradual heating
fix             nvt_heat all nvt temp 150.0 350.0 200.0

# Velocity rescaling for stability
fix             vrescale all temp/rescale 100 150.0 350.0 0.02 1.0

# Run heating phase
run             20000

# Remove fixes
unfix           nvt_heat
unfix           vrescale

# Save heated structure
write_data      test_custom_heated.data
write_restart   test_custom_heated.restart

print "NVT heating complete"
print ""

# Reset timestep counter
reset_timestep  0


# ============================================================================
# STAGE 3: NPT DENSITY EQUILIBRATION
# ============================================================================
# Purpose: Equilibrate density at target pressure
# Ensemble: NPT (constant pressure)
# Timestep: 2.0 fs
# Duration: 50000 steps (100.0 ps)
# Pressure: 10.0 atm (iso)

print "=========================================="
print "Starting Stage 3: NPT Density Equilibration"
print "=========================================="

# Set production timestep
timestep        2.0

# NPT ensemble for density equilibration
fix             npt_density all npt temp 350.0 350.0 200.0 iso 10.0 10.0 2000.0

# Monitor density convergence
variable        current_density equal density
fix             density_avg all ave/time 100 10 1000 v_current_density file test_custom_density_equilibration.dat

# Run density equilibration
run             50000

# Remove fixes
unfix           npt_density
unfix           density_avg

# Save equilibrated structure
write_data      test_custom_equilibrated.data
write_restart   test_custom_equilibrated.restart

print "Density equilibration complete"
print "Final density: ${current_density} g/cm^3"
print ""

# Reset timestep counter
reset_timestep  0


# ============================================================================
# STAGE 4: NPT PRODUCTION
# ============================================================================
# Purpose: Production run for data collection
# Ensemble: NPT (constant pressure)
# Timestep: 2.0 fs
# Duration: 500000 steps (1000.0 ps)

print "=========================================="
print "Starting Stage 4: NPT Production"
print "=========================================="

# NPT ensemble for production
fix             npt_prod all npt temp 350.0 350.0 200.0 iso 10.0 10.0 2000.0

# Trajectory output
dump            traj all custom 5000 test_custom_trajectory.lammpstrj id type x y z
dump_modify     traj sort id

# Restart files for continuation
restart         50000 test_custom_restart.*.restart

# Enhanced thermodynamic output
thermo          500
thermo_style    custom step temp press pe ke etotal vol density cpu

# Run production
run             500000

# Clean up
unfix           npt_prod
undump          traj

# Save final structure
write_data      test_custom_final.data
write_restart   test_custom_final.restart

print "Production run complete"
print ""


# ============================================================================
# SIMULATION COMPLETE
# ============================================================================

print "=========================================="
print "All stages completed successfully"
print "=========================================="
